package soal.bintang;

import java.util.Scanner;


public class STARWARS13 {
    
    public static void main(String[] args){
         //Magdalena rambulangi Informatika B
         Scanner sc = new Scanner(System.in);
         System.out.println("input");
         int in =sc.nextInt();
         System.out.println("output");
         //perulangan untuk menampilkan bujur sangkar XO
            for(int i=0; i<in; i++)  //untuk perulangan baris 
            {
                for(int j=1; j<=i; j++)//untuk perulangan kolom
                {
                    System.out.print("O ");
                }
            {
                for(int k = 1; k<=(in - i); k++){
                    System.out.print("X ");
                }
                System.out.println();
             }
             
             
         }
         
     }                            
             
}
          
