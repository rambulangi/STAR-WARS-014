package soal.bintang;

import java.util.Scanner;


public class STARWARS11 {
    
    public static void main(String[] args){
    //Magdalena rambulangi informatika B
        Scanner sc = new Scanner(System.in);
         System.out.println("input");
         int in =sc.nextInt();
         System.out.println("output");
         //perulangan untuk  menampilkan n baris segitiga sama kaki X
            for(int i=0; i<in; i++)  //untuk perulangan baris 
            {
                for(int j=1; j<in - i; j++)//untuk perulangan kolom
                {
                    System.out.print("  ");
                }
            {
                for(int j =0; j<1 + i; j++){
                    System.out.print("  X");
                }
                System.out.println( );
                }       
         }
         
     }                            
             
}

